<div class="container p-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-title">
                    <h3>Registrarse</h3>
                </div>
                <div class="card-body">
                    <form action="/links/register" method="POST">
                        <div class="form-group">
                            <label for="Nombres" class="form-label">Nombres & Apellidos</label>
                            <input type="text" required name="nombres" placeholder="Escriba aquí" class="form-control" autofocus  autocapitalize="on">
                        </div>
                        <div class="form-group">
                            <label for="Correo" class="form-label">Correo Electronico</label>
                            <input type="email" required name="email" placeholder="Escriba aquí" class="form-control" autofocus  autocapitalize="on">
                        </div>
                        <div class="form-group">
                            <label for="Telefono" class="form-label">Telefono de Contacto</label>
                            <input type="number" required name="phone" placeholder="Escriba aquí" class="form-control" autofocus  autocapitalize="on">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>