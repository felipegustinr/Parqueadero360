<div class="container p-4 text-center">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Editar Vehiculo</h3>
                </div>
                <div class="card-body">
                    <img src="https://raw.githubusercontent.com/felipegustinr/Parqueadero360/main/src/public/img/editar-vehiculo.png" alt="edit-vehicle">
                    <form action="/vehicles/edit/{{list.idVehiculo}}" method="POST">
                        <div class="form-group">
                            <label for="placa" class="form-label">Placa</label>
                            <input  type="text" value="{{list.placa}}" required name="placa" placeholder="abc-123" class="form-control"
                                autofocus style="text-transform: uppercase;" />
                        </div>
                        <div class="form-group">
                            <label for="marca" class="form-label">Marca</label>
                            <input type="text" value="{{list.marca}}"  required name="marca" placeholder="Marca Vehiculo" class="form-control"
                                autofocus style="text-transform: uppercase"  />
                        </div>
                        <div class="form-group">
                            <label for="Modelo" class="form-label">Modelo de Vehiculo</label>
                            <input type="number" value="{{list.modelo}}" required name="modelo" placeholder="Año" class="form-control"
                                autofocus />
                        </div>
                        <div class="form-group">
                            <label for="color" class="form-label">Color del Vehiculo</label>
                            <input type="text" value="{{list.color}}" required name="color" placeholder="Escriba aquí" class="form-control"
                                autofocus />
                        </div>
                        <div class="form-group">
                            <br>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success" type="submit">Guardar Cambios</button>
                                <a href="/vehicles/" class="btn btn-light" type="button">Cancelar</a>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>